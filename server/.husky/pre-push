#!/bin/sh
echo "🚀 Running quick pre-push checks..."

# Fast type checking (no file generation)
echo "📝 Type checking..."
npm run type-check

# Code quality check
echo "🔍 Linting..."
npm run lint

# Unit tests only (e2e tests can run in CI)
echo "🧪 Running unit tests..."
npm run test

echo "✅ Local checks passed! CI will run full build + analysis."
