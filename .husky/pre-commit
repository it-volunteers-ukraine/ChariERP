#!/bin/sh
echo "ğŸ” Detecting changes..."

# Check if client files changed
CLIENT_CHANGED=$(git diff --cached --name-only | grep -E "^client/" || true)
# Check if server files changed
SERVER_CHANGED=$(git diff --cached --name-only | grep -E "^server/" || true)

if [ -n "$CLIENT_CHANGED" ]; then
    echo "ğŸ¨ Client changes detected, running client pre-commit..."
    cd client
    npx lint-staged
    cd ..
fi

if [ -n "$SERVER_CHANGED" ]; then
    echo "ğŸ¨ Server changes detected, running server pre-commit..."
    cd server
    npm run format
    npm run lint -- --fix
    cd ..
    # Add formatted files back to staging
    git add server/
fi

echo "âœ… Pre-commit checks completed!"
